  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@commitlint/cli": "^7.6.0",
    "@commitlint/config-conventional": "^7.6.0",
    "@types/antd": "^1.0.0",
    "@types/enzyme": "^3.9.1",
    "@types/jest": "^24.0.12",
