  "scripts": {
    "start": "styleguidist server",
    "build": "yarn build:lib && yarn build:es && yarn build-website",
    "build:dist": "node ./config/build-dist.js",
    "build:lib": "tsc --build tsconfig.lib.json",
    "build:es": "tsc --build tsconfig.json",
    "build-website": "styleguidist build",
    "test": "jest",
    "commit": "git cz",
    "precommit": "lint-staged",
    "lint": "eslint --fix --ext .tsx"
  },
  "peerDependencies": {
    "antd": "^3.16.5",
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "**/*.tsx": [
      "npm run lint",
      "git add"
    ]
  },
  "sideEffects": [
    "dist/*",
    "es/**/style/*",
    "lib/**/style/*",
    "*.less"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
